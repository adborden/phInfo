# Apache site config file => /etc/apache2/sites-available

WSGIScriptAlias / /home/ubuntu/pathagar/wsgi.py
WSGIPythonPath /home/ubuntu/pathagar:/home/ubuntu/pathagar/venv/lib/python2.7/site-packages

Alias /static/ /home/ubuntu/pathagar/staticfiles/
Alias /static_media/ /var/www/pathagar_media/

<Directory /home/ubuntu/pathagar>
<Files wsgi.py>
Require all granted
</Files>
</Directory>

<Directory /home/ubuntu/pathagar/staticfiles>
  Order deny,allow
  Allow from all
  Require all granted
</Directory>

<Directory /var/www/pathagar_media>
  Order deny,allow
  Allow from all
  Require all granted
</Directory>

